$color = #ddd

.page_link
   display:inline-block
   padding:3px

#page_navigation
  display:inline-block
  margin:20px 20px
  a
    color #4C87AF
    float left
    padding 8px 16px
    border-radius 5px
    transition background-color .3s
    border 1px solid $color
    margin 30 4px
    font-size 14px
    &.active
      background-color #4C76AF
      color white
      border-radius 5px
    &:hover
      &:not(.active)
        background-color $color

.search
   margin 10px 2px
   padding 8px 16px
   border-radius 5px

